@page
@model ForgotPasswordModel


<body class="FondoOlvidar">
    <h1 class="TituloOlvidar animate__animated animate__fadeInUpBig">¿Olvidaste tu contraseña?</h1> <br>
<h2 class="SubOlvidar">Ingresa tu correo.</h2>
<br> 

<div class="Centrar">
    <div class="">
    <div class="Formulario">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Enviar correo</button>
        </form>
    </div>
</div>
</div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
